<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <!-- 問題タイトルと画像 -->
      <h2 class="text-center mb-4">
        <%= @book_detail.title %>
      </h2>
      <div class="text-center mb-3">
        <% if @book_detail.image.attached? %>
          <%= image_tag @book_detail.image, size: "500x500", class: "img-fluid" %>
        <% end %>
      </div>

      <!-- 問題文 -->
      <p class="lead text-center">
        <%= simple_format(@book_detail.body) %>
      </p>

      <!-- 解答エリア -->
      <div class="mt-5">
        <h4>回答一覧</h4>
        <% @book_detail.book_comments.each_with_index do |book_comment, index| %>
        <% if book_comment.user == current_user %>
          <div class="row mb-3 align-items-center">
            <div class="col-4 text-center">
              <%= link_to user_path(book_comment.user.id) do %>
                <% if book_comment.user.profile_image.attached? %>
                  <%= image_tag book_comment.user.get_profile_image(80, 80), class: "rounded-circle" %>
                <% else %>
                  <%= image_tag 'default-image.jpg', size: "80x80", class: "rounded-circle" %>
                <% end %>
              <% end %>
              <small><%= book_comment.user.name %></small>
            </div>
            <div class="col-8">
              <div class="p-3 border rounded bg-light d-flex justify-content-between align-items-center">
                <div class="text-left">
                  <strong>回答 <%= index + 1 %>:</strong> <%= book_comment.comment %>
                </div>
                <div class="text-right">
                  <% if book_comment.user == current_user %>
                    <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger ml-3" %>
                  <% end %>
                  <span class="ml-2"><%= book_comment.answer_time %></span>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>
      </div>

      <!-- 解答フォーム -->
      <div class="mt-4">
        <h4>解答を入力</h4>
        <%= form_with model: [@book_detail, @book_comment], local: true do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: 3, class: "form-control", placeholder: "ここに解答を入力してください" %>
          </div>
          <div class="form-group text-center">
            <%= f.submit "送信する", class: "btn btn-primary" %>
          </div>
          <%= f.hidden_field :answer_time, id: "answer_time_field" %>
        <% end %>
      </div>
    </div>
  </div>
  
  <script>
  // ページ読み込み時に sessionStorage にタイムスタンプを保存
  if (!sessionStorage.getItem("startTime")) {
    sessionStorage.setItem("startTime", new Date().getTime());
  }

  document.addEventListener("submit", function(event) {
    // sessionStorage からタイムスタンプを取得
    const startTime = parseInt(sessionStorage.getItem("startTime"), 10);

    // タイムスタンプが正しく取得できているか確認
    if (!startTime || isNaN(startTime)) {
      console.error("タイムスタンプが取得できませんでした。");
      return;
    }

    // 解答時間を計算
    const answerTime = (new Date().getTime() - startTime) / 1000;
    document.getElementById("answer_time_field").value = answerTime.toFixed(3);

    // フォーム送信後に送信ボタンを無効化して、二重送信を防止
    const submitButton = event.target.querySelector("input[type='submit']");
    if (submitButton) {
      submitButton.disabled = true;
      submitButton.value = "送信中..."; // ボタンのテキストを変更
    }

    // タイムスタンプのリセット
    sessionStorage.removeItem("startTime");
  });

  // ページを離れる際にもタイムスタンプを削除してリセット
  window.addEventListener("beforeunload", function() {
    sessionStorage.removeItem("startTime");
  });
</script>

</div>
