<div class="col-md-3">
    <h2>User Info</h2>
    <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image, size: "100x100" %>
    <% else %>
      <%= image_tag 'default-image', size: "100x100" %>
    <% end %>
    <table class="table">
      <tbody>
        <tr>
          <th>Name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>Introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i> Edit Profile
      <% end %>
    </div>

    <!-- クイズコレクション作成フォーム -->
    <h3 class="mt-3">問題集作成</h3>
    <%= form_with model: quiz_collection, url: quiz_collections_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :title, "タイトル" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.submit 'Create Collection', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
